<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|left"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:gravity="center_horizontal"
        android:text="Menu"
        android:textSize="50" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginBottom="100"
        android:ems="20"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="15"
        android:paddingLeft="15"
        android:paddingTop="15"
        android:paddingRight="15"
        android:paddingBottom="15"
        android:selectAllOnFocus="false"
        android:text='"Select a layout type to view an example. The onClick attribute of each button will call a method which executes setContentView to load the new layout."'
        android:textIsSelectable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="clip_vertical"
            android:layout_weight=".7"
            android:text="Load Table Layout"
            android:textSize="20" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="Load" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="TextView" />

</LinearLayout>